{
  "info": {
    "name": "Predictly API",
    "description": "Prediction Market for Friend Groups - API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "groupId",
      "value": "",
      "type": "string"
    },
    {
      "key": "marketId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register/Login with Privy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.collectionVariables.set('userId', jsonData.data.user.id);",
                  "    console.log('Token saved!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"privyId\": \"test-user-{{$randomInt}}\",\n  \"walletAddress\": \"0x{{$randomHexadecimal}}{{$randomHexadecimal}}\",\n  \"displayName\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/auth/privy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "auth", "privy"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"displayName\": \"Updated Name\",\n  \"avatarUrl\": \"https://example.com/avatar.png\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "Get Leaderboard",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/leaderboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "leaderboard"]
            }
          }
        }
      ]
    },
    {
      "name": "Groups",
      "item": [
        {
          "name": "List Public Groups",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/groups?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Create Group",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.collectionVariables.set('groupId', jsonData.data.id);",
                  "    console.log('Group ID saved: ' + jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Crypto Enthusiasts\",\n  \"description\": \"A group for crypto price predictions\",\n  \"isPublic\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/groups",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups"]
            }
          }
        },
        {
          "name": "Get Group Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}"]
            }
          }
        },
        {
          "name": "Join Group",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"inviteCode\": \"YOUR_INVITE_CODE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/groups/join",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "join"]
            }
          }
        },
        {
          "name": "Get Group Members",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}/members",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}", "members"]
            }
          }
        },
        {
          "name": "Update Member Role",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"JUDGE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}/members/{{userId}}/role",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}", "members", "{{userId}}", "role"]
            }
          }
        },
        {
          "name": "Update Group",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Group Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}"]
            }
          }
        },
        {
          "name": "Delete Group",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Image to IPFS",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/upload/image",
              "host": ["{{baseUrl}}"],
              "path": ["api", "upload", "image"]
            }
          }
        }
      ]
    },
    {
      "name": "Predictions",
      "item": [
        {
          "name": "List Markets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/predictions?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "groupId", "value": "{{groupId}}", "disabled": true },
                { "key": "status", "value": "ACTIVE", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Create Market",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.collectionVariables.set('marketId', jsonData.data.id);",
                  "    console.log('Market ID saved: ' + jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"groupId\": \"{{groupId}}\",\n  \"title\": \"Will BTC reach $100k by end of 2024?\",\n  \"description\": \"Bitcoin price prediction market\",\n  \"marketType\": \"STANDARD\",\n  \"endDate\": \"2024-12-31T23:59:59Z\",\n  \"minStake\": 0.1,\n  \"maxStake\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/predictions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions"]
            }
          }
        },
        {
          "name": "Get Market Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "Optional - includes user vote if provided"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/predictions/{{marketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions", "{{marketId}}"]
            }
          }
        },
        {
          "name": "Place Vote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prediction\": \"YES\",\n  \"amount\": 1.5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/predictions/{{marketId}}/vote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions", "{{marketId}}", "vote"]
            }
          }
        },
        {
          "name": "Resolve Market",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"outcome\": \"YES\",\n  \"resolutionNote\": \"BTC reached $100k on Dec 5, 2024\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/predictions/{{marketId}}/resolve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions", "{{marketId}}", "resolve"]
            }
          }
        },
        {
          "name": "Claim Reward",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/predictions/{{marketId}}/claim",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions", "{{marketId}}", "claim"]
            }
          }
        },
        {
          "name": "Get My Votes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/predictions/my-votes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "predictions", "my-votes"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "Create Checkout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plan\": \"monthly\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "checkout"]
            }
          }
        },
        {
          "name": "Get Subscription Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "status"]
            }
          }
        },
        {
          "name": "Activate Subscription (Mock Webhook)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"plan\": \"monthly\",\n  \"transactionId\": \"tx_mock_{{$randomUUID}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "webhook"]
            }
          }
        }
      ]
    }
  ]
}
