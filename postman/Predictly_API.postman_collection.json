    {
      "name": "Wallet Authentication",
      "item": [
        {
          "name": "1. Get Sign-In Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.message) {",
                  "    // Save the message as a JSON-escaped string",
                  "    pm.collectionVariables.set('signInMessage', JSON.stringify(jsonData.data.message));",
                  "    pm.collectionVariables.set('nonce', jsonData.data.nonce);",
                  "    console.log('Sign-in message saved!');",
                  "    console.log('Message:', jsonData.data.message);",
                  "    console.log('Nonce:', jsonData.data.nonce);",
                  "    console.log('Expires at:', jsonData.data.expiresAt);",
                  "    console.log('');",
                  "    console.log('⚠️  IMPORTANT: Copy the message above and sign it with your wallet.');",
                  "    console.log('Then paste the signature in the next request.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"{{walletAddress}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/wallet/message",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "wallet", "message"]
            },
            "description": "Generate a message to be signed by the user's wallet. The nonce expires after 5 minutes."
          }
        },
        {
          "name": "2. Verify Signature & Login",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// This script runs before the request",
                  "// It ensures the message is properly formatted in the request body"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.collectionVariables.set('userId', jsonData.data.user.id);",
                  "    console.log('Token saved!');",
                  "    console.log('User ID:', jsonData.data.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"{{walletAddress}}\",\n  \"signature\": \"YOUR_WALLET_SIGNATURE_HERE\",\n  \"publicKey\": \"YOUR_PUBLIC_KEY_HERE\",\n  \"message\": {{signInMessage}}\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/wallet/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "wallet", "verify"]
            },
            "description": "Verify the signed message and authenticate the user. Sign the message from step 1 with your wallet."
          }
        },
        {
          "name": "3. Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get the authenticated user's profile"
          }
        }
      ],
      "description": "New wallet-based authentication endpoints"
    },
    {
      "name": "Markets (Hybrid System)",
      "item": [
        {
          "name": "1. Create Market (Off-Chain)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.collectionVariables.set('marketId', jsonData.data.id);",
                  "    console.log('Market ID saved:', jsonData.data.id);",
                  "    console.log('Status:', jsonData.data.status);",
                  "    console.log('On-Chain ID:', jsonData.data.onChainId || 'Not initialized yet');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"groupId\": \"{{groupId}}\",\n  \"title\": \"Will Bitcoin reach $100k by end of 2024?\",\n  \"description\": \"Bitcoin price prediction market\",\n  \"marketType\": \"STANDARD\",\n  \"endDate\": \"2024-12-31T23:59:59Z\",\n  \"minStake\": 1.0,\n  \"maxStake\": 100.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/markets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "markets"]
            },
            "description": "Create a new market off-chain (FREE - no gas fees). Market status will be PENDING until initialized on-chain."
          }
        },
        {
          "name": "2. Initialize Market (On-Chain)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.onChainId) {",
                  "    console.log('Market initialized on-chain!');",
                  "    console.log('On-Chain ID:', jsonData.data.onChainId);",
                  "    console.log('Status:', jsonData.data.status);",
                  "    console.log('Transaction Hash:', jsonData.data.transactionHash);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/markets/{{marketId}}/initialize",
              "host": ["{{baseUrl}}"],
              "path": ["api", "markets", "{{marketId}}", "initialize"]
            },
            "description": "Initialize market on-chain. Backend relay wallet pays gas fees. This is typically called automatically before first vote."
          }
        },
        {
          "name": "3. Get Market Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/markets/{{marketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "markets", "{{marketId}}"]
            },
            "description": "Get market details with on-chain data (if initialized)"
          }
        },
        {
          "name": "4. Get Group Markets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/groups/{{groupId}}/markets?status=ACTIVE&limit=10&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "groups", "{{groupId}}", "markets"],
              "query": [
                {
                  "key": "status",
                  "value": "ACTIVE",
                  "description": "Filter by status: PENDING, ACTIVE, RESOLVED, CANCELLED"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Get all markets for a specific group with optional filters"
          }
        },
        {
          "name": "5. Sync Market Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/markets/{{marketId}}/sync",
              "host": ["{{baseUrl}}"],
              "path": ["api", "markets", "{{marketId}}", "sync"]
            },
            "description": "Manually sync market data from blockchain (auto-syncs every 1 minute for active markets)"
          }
        }
      ],
      "description": "Hybrid market system - create off-chain (free), vote on-chain (user pays gas)"
    },
